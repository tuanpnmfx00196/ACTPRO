<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:weightSum="3.1"
    android:layout_height="100dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_margin="0.3dp"
        android:textColor="#D50000"
        android:textSize="14sp"
        android:text="Phiếu xuất kho chưa nhập"
        android:gravity="center"
        android:background="#570091EA"
        android:id="@+id/titleDeliver"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="12"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_margin="1dp"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="#570091EA"
            android:id="@+id/storeDeliver"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:layout_margin="1dp"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="#570091EA"
            android:id="@+id/userDeliver"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:layout_margin="1dp"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="#570091EA"
            android:id="@+id/timeDeliver"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_margin="0.3dp"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:textAlignment="textStart"
        android:gravity="center"
        android:background="#570091EA"
        android:id="@+id/commentDeliver"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:background="#F19B06"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></LinearLayout>
</LinearLayout>